# Specify the models that you use

models <- list( 
  "Sharing w/o controls" = lm(sharing_all ~ treatment * real,
        data = df),
  "Sharing with controls" = lm(sharing_all ~ treatment * real + female + age4 + income_hh + educ3 + vote_next2,
        data = df)
)


# Define order of variables and names
cm <- c("treatmentNudge"    = "Accuracy nudge",
        "treatmentShort"    = "15 sec video",
        "treatmentLong" = "180 sec video",
        "realreal" = "Veracity",
        "treatmentNudge:realreal"    = "Accuracy nudge X Veracity",
        "treatmentShort:realreal"    = "15 sec video X Veracity",
        "treatmentLong:realreal" = "180 sec Video X Veracity",
        "(Intercept)" = "Constant")

# Define what should be shown
gm <- tibble::tribble(
  ~raw,        ~clean,          ~fmt,
  "nobs",      "N",             0,
  "r.squared", "R<sup>2</sup>", 2,
  "vcov.type", "SE clusters", 0)


modelsummary(
  models,
  title = "Main analysis: Outcome: Sharing, Interaction: Treatment X Veracity",
  vcov = ~ resid + headline,
  stars = TRUE,
  coef_map = cm,
  gof_map = gm,
  gof_omit = "DF|Deviance|R2|AIC|BIC",
  notes = "Controls for sex, age, household income, education, voting intention, and treatment"
  #output = here::here("2_figures", "0_tables", "main_interaction.tex")
) 
